{
    "name": "puzzle-root",
    "private": true,
    "scripts": {
        "install:all": "pnpm install && cd client && pnpm install && cd ../server && pip install -r requirements.txt",
        "dev": "concurrently -n \"API,UI\" -c \"blue,magenta\" \"pnpm run dev:server\" \"pnpm run dev:client\"",
        "dev:server": "cd server && uvicorn main:app --reload",
        "dev:client": "cd client && pnpm dev",
        "build": "cd client && pnpm install && pnpm run build"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    },
    "engines": {
        "node": "20.x"
    }
}